{
    "name": "vscode-plugin-hcmobile-grid",
    "displayName": "vscode-plugin-hcmobile-grid",
    "description": "中控信息Cloud Grid开发插件",
    "keywords": [
        "vscode",
        "plugin",
        "hcmobile",
        "supcon",
        "it"
    ],
    "version": "1.0.3",
    "publisher": "hc_mobile_dev",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TypeScript configuration",
            "properties": {
                "editIp_key": {
                    "type": "string",
                    "default": "",
                    "description": "Clid Grid Ip地址"
                },
                "vscodePluginDemo.showTip": {
                    "type": "boolean",
                    "default": true,
                    "description": "启动时显示自定义欢迎页"
                }
            }
        },
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello，s同学"
            },
            {
                "command": "extension.demo.getCurrentFilePath",
                "title": "getCurrentFilePath",
                "icon": {
                    "light": "./images/tool-light.svg",
                    "dark": "./images/tool-light.svg"
                }
            },
            {
                "command": "extension.demo.testMenuShow",
                "title": "这个菜单仅在JS文件中出现",
                "icon": {
                    "light": "./images/tool-light.svg",
                    "dark": "./images/tool-light.svg"
                }
            },
            {
                "command": "extension.hcmobile.runjsorhtml",
                "title": "(Run)在cloud Grid App中运行此页面(if not config, config)"
            },
            {
                "command": "extension.hcmobile.runjs",
                "title": "(Run)在cloud Grid App中运行此Js文件"
            },
            {
                "command": "extension.hcmobile.runjshtml",
                "title": "(Run)在cloud Grid App中单独运行此页面"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus && resourceLangId == html",
                    "command": "extension.hcmobile.runjshtml",
                    "group": "navigation"
                },
                {
                    "when": "editorFocus && resourceLangId == javascript",
                    "command": "extension.hcmobile.runjs",
                    "group": "navigation"
                }
            ],
            "editor/title": [],
            "editor/title/context": [],
            "explorer/context": [
                {
                    "when": "resourceLangId == html",
                    "command": "extension.hcmobile.runjshtml",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == javascript",
                    "command": "extension.hcmobile.runjs",
                    "group": "navigation"
                }
            ]
        },
        "snippets": [
            {
                "language": "javascript",
                "path": "./snippets/javascript.json"
            },
            {
                "language": "html",
                "path": "./snippets/html.json"
            }
        ],
        "iconThemes": [
            {
                "id": "testIconTheme",
                "label": "测试图标主题",
                "path": "./theme/icon-theme.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://www.yd-mobile.cn/#/"
    },
    "repository": {
        "type": "git",
        "url": "https://www.yd-mobile.cn/#/"
    },
    "homepage": "https://www.yd-mobile.cn/#/"
}